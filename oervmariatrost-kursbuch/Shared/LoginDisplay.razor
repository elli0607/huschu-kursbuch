<AuthorizeView>
    <Authorized>
        <div class="row">
            <div class="col-auto hide-login-name">
                <div class="user-text"> Hallo, @context.User.Identity.Name!</div>
            </div>
            <div class="col-auto hide-login-name">

            </div>
            <div class="col-auto">
                <form method="post" action="Account/LogOut">
                    <button type="submit" class="nav-link btn btn-link logout-button"><i class="fa-solid fa-arrow-right-from-bracket nav-icon"></i>Ausloggen</button>
                </form>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <a href="Account/Login" class="nav-link login-button"><i class="fa-solid fa-arrow-right-to-bracket nav-icon"></i>Einloggen</a>
    </NotAuthorized>
</AuthorizeView>